# ============================================================================
# WMS ENTERPRISE - Environment Variables
# ============================================================================
# IMPORTANTE: Copie este arquivo para .env.local ou .env.development
# e ajuste os valores para seu ambiente
# ============================================================================

# =========================================================================
# DATABASE - PostgreSQL Configuration
# =========================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=wms_dev
DB_USER=wms_user
DB_PASSWORD=wms_password_dev
DB_SSL_MODE=disable
DATABASE_URL=postgresql://wms_user:wms_password_dev@localhost:5432/wms_dev

# =========================================================================
# CACHE - Redis Configuration
# =========================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# =========================================================================
# SEARCH ENGINE - Elasticsearch Configuration
# =========================================================================
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# =========================================================================
# MESSAGE BROKER - Kafka Configuration
# =========================================================================
KAFKA_BROKERS=localhost:9092,localhost:29092
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CONSUMER_GROUP=wms-dev-group
KAFKA_SCHEMA_REGISTRY_URL=http://localhost:8081

# =========================================================================
# METRICS & MONITORING - Prometheus Configuration
# =========================================================================
PROMETHEUS_URL=http://localhost:9090
PROMETHEUS_SCRAPE_INTERVAL=15s
PROMETHEUS_EVALUATION_INTERVAL=15s

# =========================================================================
# VISUALIZATION - Grafana Configuration
# =========================================================================
GRAFANA_URL=http://localhost:3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# =========================================================================
# TRACING - Jaeger Configuration
# =========================================================================
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
JAEGER_SAMPLER_TYPE=const
JAEGER_SAMPLER_PARAM=1
JAEGER_SAMPLER_RATE=0.1

# =========================================================================
# LOGGING - Loki Configuration
# =========================================================================
LOKI_URL=http://localhost:3100

# =========================================================================
# PGADMIN - PostgreSQL GUI Configuration
# =========================================================================
PGADMIN_EMAIL=admin@wms.local
PGADMIN_PASSWORD=admin

# =========================================================================
# API - Backend Configuration
# =========================================================================
API_HOST=0.0.0.0
API_PORT=8080
API_SCHEME=http
API_BASE_URL=http://localhost:8080

# =========================================================================
# ENVIRONMENT & LOGGING
# =========================================================================
ENV=development
NODE_ENV=development
LOG_LEVEL=debug
VITE_ENV=development

# =========================================================================
# SECURITY - JWT & Authentication
# =========================================================================
JWT_SECRET=your-super-secret-key-change-in-production-PLEASE
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080

# =========================================================================
# FRONTEND - Vite Configuration
# =========================================================================
VITE_API_URL=http://localhost:8080/api/v1
VITE_API_TIMEOUT=30000
VITE_LOG_LEVEL=debug

# =========================================================================
# MULTI-TENANCY
# =========================================================================
ENABLE_MULTI_TENANCY=true
DEFAULT_TENANT_ID=default-tenant

# =========================================================================
# FEATURES - Feature Flags
# =========================================================================
ENABLE_KAFKA=true
ENABLE_ELASTICSEARCH=true
ENABLE_CACHING=true
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_ADVANCED_PICKING=false
ENABLE_ML_FEATURES=false

# =========================================================================
# STORAGE - File Storage Configuration
# =========================================================================
STORAGE_TYPE=local
STORAGE_PATH=./uploads
STORAGE_MAX_SIZE=104857600  # 100MB

# =========================================================================
# EMAIL - Notification Configuration (Optional)
# =========================================================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@wms.local

# =========================================================================
# INTEGRATIONS (Para fase 2+)
# =========================================================================
# SAP_ENABLED=false
# SAP_HOST=sap.company.local
# SAP_USER=
# SAP_PASSWORD=

# =========================================================================
# PERFORMANCE & LIMITS
# =========================================================================
MAX_CONNECTIONS=200
QUERY_TIMEOUT=30s
REQUEST_TIMEOUT=60s
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60s
